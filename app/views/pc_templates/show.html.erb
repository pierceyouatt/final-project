<h1>
  Details for <%= @pc.name %>
</h1>

<a href="/pcs/<%= @pc.id %>/edit">
  Edit Character
</a>

<hr>

<dl>

  <dt>
    Player Name
  </dt>
  <dd>
    <%= @pc.user.username %>
  </dd>

  <dt>
    STR
  </dt>
  <dd>
    <%= @pc.str %>
  </dd>

  <dt>
    DEX
  </dt>
  <dd>
    <%= @pc.dex %>
  </dd>

  <dt>
    CON
  </dt>
  <dd>
    <%= @pc.con %>
  </dd>

  <dt>
    INT
  </dt>
  <dd>
    <%= @pc.int %>
  </dd>

  <dt>
    WIS
  </dt>
  <dd>
    <%= @pc.wis %>
  </dd>

  <dt>
    CHA
  </dt>
  <dd>
    <%= @pc.cha %>
  </dd>

  <dt>
    AC
  </dt>
  <dd>
    <%= @pc.ac %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@pc.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@pc.updated_at) %> ago
  </dd>
</dl>


<a href="/delete_pc/<%= @pc.id %>">
  Delete Character
</a>
<hr>

<a href="/wieldings/new">
  Arm your character
</a>

<hr>

<table class="table">
  <tr>
    <th>
      Weapon
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

  </tr>

  <% @wieldings.each do |wielding| %>
  <tr>
    <td>
      <a href="/weapons/<%= wielding.weapon_id %>"><%= wielding.weapon.name %></a>
    </td>
    <td>
      <%= time_ago_in_words(wielding.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(wielding.updated_at) %> ago
    </td>

    <td>
      <a href="/delete_wielding/<%= wielding.id %>">
        Remove weapon
      </a>
    </td>
  </tr>
  <% end %>
</table>


<a href="/">
  Go back
</a>
