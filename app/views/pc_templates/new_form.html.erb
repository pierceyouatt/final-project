
<!-- Validation failure messages -->
<% if @pc.present? %>
  <% if @pc.errors.any? %>
    <% @pc.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>


